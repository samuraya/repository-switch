        "illuminate/database": "^8.15",
        "narrowspark/http-emitter": "^1.0",
        "laminas/laminas-diactoros": "^2.5",
        "predis/predis": "^1.1",
        "slim/php-view": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "mockery/mockery": "^1.4"
